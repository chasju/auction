{
  "name": "auction",
  "description": "Noroff Semester Project 2",
  "type": "module",
  "version": "0.2.10",
  "main": "src/index.mjs",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "cypress": "^10.7.0",
    "eslint": "^8.28.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest": "^27.1.5",
    "husky": "^8.0.2",
    "jest": "^29.2.0",
    "lint-staged": "^13.0.3",
    "live-server": "^1.2.2",
    "prettier": "^2.7.1",
    "sass": "^1.55.0"
  },
  "scripts": {
    "build": "sass src/scss:dist/css",
    "watch": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier -w src/**/*",
    "lint": "eslint src/**/*.mjs",
    "lint-fix": "eslint src/**/*.mjs --cache --fix",
    "prepare": "husky install",
    "test": "npm run test-unit && npm run test-e2e-cli",
    "test-unit": "jest",
    "test-e2e": "cypress open",
    "test-e2e-cli": "cypress run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chasju/auction.git"
  },
  "keywords": [],
  "author": "Charlotte <charlotte.sjusdal@hotmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chasju/auction/issues"
  },
  "dependencies": {
    "bootstrap": "^5.2.0"
  },
  "homepage": "https://github.com/chasju/auction#readme",
  "lint-staged": {
    "*.src/**/*": "prettier --write",
    "*.mjs": "eslint --cache --fix",
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "mjs",
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/?(*.)test.?js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cypress/"
    ],
    "transform": {
      "^.+\\.m?js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "\\.pnp\\.[^\\/]+$"
    ]
  }
}
