{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
     "overrides": [
      {
        "files": ["**/*.test.mjs"],
        "env": { "jest": true },
        "plugins": ["jest"],
        "extends": ["plugin:jest/recommended"],
        "rules": { "jest/prefer-expect-assertions": "off",
                "no-unused-vars": "off",
                "no-undef": "off" }
      }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-undef": "warn"
    }
}
